<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="user" class="domain.UserEntity"></var>
    
    <view-state id="welcome" view="welcome.xhtml">
        <transition on="newUser" to="singUp"/>
    </view-state>

    <view-state id="singUp" view="singUp.xhtml" model="user">
        <transition on="backToSignIn" to="welcome"/>
        <transition on="confirmSingUp" to="authenticate">
            <evaluate expression="userService.createUser(user)"/>
        </transition>
    </view-state>
</flow>